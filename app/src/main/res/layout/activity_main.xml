<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.android.popularmoviesstage1.MainActivity">

   <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/tv_error_message_display"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:padding="@dimen/main_tv_padding"
       android:text="@string/error_message"
       android:textSize="@dimen/main_tv_size"
       tools:text="Error occured"
       android:layout_gravity="center"
       android:textColor="@android:color/white"
       android:visibility="invisible" />

   <ProgressBar
       android:id="@+id/pb_loading_indicator"
       android:layout_height="@dimen/main_progress_bar"
       android:layout_width="@dimen/main_progress_bar"
       android:layout_gravity="center"
       android:visibility="invisible" />


</FrameLayout>
